{
  "name": "oj-short",
  "version": "2.0.0",
  "description": "Short commands for oj",
  "author": {
    "name": "e6nlaq",
    "url": "https://github.com/e6nlaq"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e6nlaq/oj-short.git"
  },
  "bugs": {
    "url": "https://github.com/e6nlaq/oj-short/issues"
  },
  "homepage": "https://github.com/e6nlaq/oj-short#readme",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.3.1",
    "@types/node": "^24.9.2",
    "@types/update-notifier": "^6.0.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "rimraf dist /Q /S && tsc",
    "prepublishOnly": "bun run build",
    "format": "biome format --write ./src/**/*.ts",
    "check": "biome check --write ./src/**/*.ts",
    "check:unsafe": "biome check --write --unsafe ./src/**/*.ts",
    "lint": "biome lint ./src/**/*.ts",
    "get": "bun run src/get.ts",
    "subm": "bun run src/subm.ts",
    "prepare": "husky",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "bun check"
    ]
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "update-notifier": "^7.3.1",
    "zod": "^4.1.12"
  },
  "bin": {
    "get": "src/get.ts",
    "subm": "src/subm.ts"
  },
  "private": true
}
